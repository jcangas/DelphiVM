#!/usr/bin/env ruby
$LOAD_PATH.unshift File.join(File.dirname($PROGRAM_NAME), '..', 'lib')

begin
  if ARGV[0] == 'test'
    ::TEST = true
    ARGV.shift
  end

  if ARGV[0] == 'debug'
    ::BACKTRACE = true
    ARGV.shift
  end

  $0 = 'dvm' # ENV["OCRA_EXECUTABLE"] || __FILE__
  if defined? Ocra
    ARGV << 'vendor:import' << '-c' # to see all requires when compiling
  end

  require 'delphivm'
  $thor_runner = true

  Delphivm::Runner.start(ARGV)

rescue Interrupt => e
  puts "\Aborting..."
  puts e.backtrace.join("\n") if defined? ::BACKTRACE
  exit 1
rescue Exception => e
  puts e.message
  puts e.backtrace.join("\n") if defined? ::BACKTRACE
  exit 1
end
exit 0
